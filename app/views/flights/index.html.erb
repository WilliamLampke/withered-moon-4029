<h1>Flights Index</h1>
<% @flights.each do |flight| %>
    <h3>Flight Number: <%= flight.number%></h3>
    <p>Airline: <%= flight.airline.name %> </p>
    <h5>Passengers: </h5>
    <% flight.flight_passengers.each do |flight_passenger| %>
        
        <p><%= flight_passenger.passenger.name %></p>
        <%= link_to "Delete #{flight_passenger.passenger.name} #{flight_passenger.id}", "/flight_passengers/#{flight_passenger.id}", method: "delete"%>
    <% end %>
<% end %>